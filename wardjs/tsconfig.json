{
    "compilerOptions": {
        "rootDir": "./src",
        "skipLibCheck": true,
        "emitDeclarationOnly": false,
        "declaration": true,
        "declarationMap": true,
        "target": "es2020",
        "module": "node16",
        "lib": [
            "es2022",
            "DOM"
        ],
        "sourceMap": true,
        "allowJs": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
